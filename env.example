# Kotaemon Configuration Example
# Copy this to .env and modify as needed

# Tenant System Configuration
KH_ENABLE_TENANT_SYSTEM=true

# Default Tenant Settings (automatically created on first run)
KH_DEFAULT_TENANT_NAME="Your Organization"
KH_DEFAULT_TENANT_DOMAIN=

# Super Admin (full access including tenant management)
KH_DEFAULT_SUPER_ADMIN="superadmin"
KH_DEFAULT_SUPER_ADMIN_EMAIL="superadmin@yourcompany.com"
KH_DEFAULT_SUPER_ADMIN_PASSWORD="superadmin"

# Admin (chat, files, resources, settings, help)
KH_DEFAULT_TENANT_ADMIN="admin"
KH_DEFAULT_TENANT_ADMIN_EMAIL="admin@yourcompany.com"
KH_DEFAULT_TENANT_ADMIN_PASSWORD="admin"

# User (chat and files only)
KH_DEFAULT_USER="user"
KH_DEFAULT_USER_EMAIL="user@yourcompany.com"
KH_DEFAULT_USER_PASSWORD="user"

# Legacy User Management (for backward compatibility)
KH_FEATURE_USER_MANAGEMENT=true
KH_FEATURE_USER_MANAGEMENT_ADMIN="admin"
KH_FEATURE_USER_MANAGEMENT_PASSWORD="admin"

# Security Settings
KH_PASSWORD_MIN_LENGTH=8
KH_INVITATION_EXPIRY_DAYS=7
KH_SESSION_TIMEOUT_HOURS=24

# Other Settings
KH_DEMO_MODE=false
KH_SSO_ENABLED=false
KH_ENABLE_FIRST_SETUP=false
